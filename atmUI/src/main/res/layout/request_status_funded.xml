<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:background="@color/white"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Funded" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:text="Your code has been funded and it's ready to use. Go to the ATM and enter the code to withdraw cash." />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cashCode"
            android:drawableEnd="@drawable/ic_content_copy"
            android:textAlignment="center"
            android:textSize="25dp"
            tools:text="98299-3574"
            android:textColor="@color/green_text"
            android:layout_marginBottom="20dp"
        />

        <TextView
            android:id="@+id/amountFunded"
            android:layout_marginTop="7dp"
            tools:text="Amount (USD):  $20"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/locationFunded"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:drawableEnd="@drawable/ic_map_marker"
            android:text="Location: Wells Fargo Bank, Tampa"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>