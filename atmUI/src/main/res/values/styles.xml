<resources>
    <style name="CashUI"/>

    <style name="CashUI.Theme" parent="Theme.MaterialComponents.DayNight"/>
    <style name="CashUI.Theme.Dialog" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="CashUI.Widget"/>
    <style name="CashUI.Widget.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="helperTextTextAppearance">@style/CashUI.Widget.TextInputLayoutHelperText</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="CashUI.Widget.TextInputLayoutHelperText">
        <item name="android:textSize">16sp</item>
    </style>

    <!--==========================================-->
    <!--                  Buttons                 -->
    <!--==========================================-->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/row_height_normal</item>
        <item name="android:textAppearance">@style/Text.Button.Primary</item>
        <item name="android:textColor">?attr/primaryActionTextColour</item>
        <item name="backgroundTint">?attr/primaryActionBackground</item>
        <item name="strokeColor">?attr/primaryActionBorder</item>
        <item name="rippleColor">?attr/rippleColour</item>
    </style>

    <style name="Button.Primary.Highlighted" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/row_height_normal</item>
        <item name="android:textAppearance">@style/Text.Button.Primary.Highlighted</item>
        <item name="android:textColor">?attr/primaryActionHighlightedTextColour</item>
        <item name="backgroundTint">?attr/primaryActionHighlightedBackground</item>
        <item name="strokeColor">?attr/primaryActionHighlightedBorder</item>
        <item name="rippleColor">?attr/rippleColour</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/row_height_normal</item>
        <item name="android:textAppearance">@style/Text.Button.Secondary</item>
        <item name="android:textColor">?attr/secondaryActionTextColour</item>
        <item name="backgroundTint">?attr/secondaryActionBackground</item>
        <item name="strokeColor">?attr/secondaryActionBorder</item>
        <item name="rippleColor">?attr/rippleColour</item>
    </style>

    <style name="Button.Secondary.Dialog">
        <!--<item name="android:textColor">?attr/secondaryDialogActionTextColour</item>-->
        <item name="android:textColor">@color/blackRussian</item>
    </style>

</resources>
