<resources>
    <style name="CashUI"/>

    <style name="CashUI.Theme" parent="Theme.MaterialComponents.DayNight">
        <item name="primaryActionTextColour">@android:color/white</item>
        <item name="primaryActionBackground">@color/colorPrimary</item>
        <item name="primaryActionBorder">@color/colorPrimaryDark</item>
        <item name="secondaryActionTextColour">@android:color/white</item>
        <item name="secondaryActionBackground">@color/colorSecondary</item>
        <item name="secondaryActionBorder">@color/colorSecondaryDark</item>
        <item name="rippleColour">@color/rippleColourLight</item>
    </style>

    <style name="CashUI.Theme.Dialog" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="CashUI.Widget"/>
    <style name="CashUI.Widget.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="helperTextTextAppearance">@style/CashUI.Widget.TextInputLayoutHelperText</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="CashUI.Widget.TextInputLayoutHelperText">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
