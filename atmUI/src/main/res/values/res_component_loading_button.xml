<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="loadingButtonText" format="reference" />
        <attr name="loadingButtonStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="primary_highlighted" value="1" />
            <enum name="secondary" value="2" />
            <enum name="secondary_dialog" value="3" />
        </attr>
        <attr name="loadingButtonState" format="enum">
            <enum name="off" value="0" />
            <enum name="on" value="1" />
        </attr>
    </declare-styleable>

    <!--==========================================-->
    <!--                Resources                 -->
    <!--==========================================-->
    <dimen name="button_progress_margin">48dp</dimen>
    <dimen name="button_progress_padding">12dp</dimen>
    <dimen name="button_progress_size">24dp</dimen>
</resources>