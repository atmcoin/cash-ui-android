<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/footerGroup"
        android:orientation="vertical"
        android:background="#303030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/privacyLink"
                android:text="Privacy Policy     |"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/email"
                android:textColorLink="#FFFFFF"
                android:autoLink="email"
                android:gravity="center"
                android:text="     atm@coinsquare.com"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

         <TextView android:padding="7dp"
            android:autoLink="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="If you are reaching out from the US\n you can call +1 800-797-1404"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="5.10.6 - English"
            android:id="@+id/versionNumber"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</merge>